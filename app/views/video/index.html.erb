<%= render partial: 'dashboard/shared/sidebar' %>

<div class="container" id="main">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
			<% filename = @file_name %>
			<table class="table table-striped table-bordered text-center">
			<thead>
			<tr>
			  <th class="text-center" style="line-height:30px;">Media</th>
			  <th class="text-center" style="line-height:30px;">Customer</th>
			  <th class="text-center" style="line-height:30px;">Details</th>
			</tr>
			</thead>
			<tbody>
				<% unless filename.blank? %>
				<td>Video-1</td>
				<td><a data-toggle='modal' data-target='#customer-modal' style='cursor: pointer; cursor: hand;'>Add</a></td>
				<td><span class="glyphicon glyphicon-calendar"></span></td>
				<% end %>
			</tbody>
			</table>	
        </div>
    </div>
	<div class="row"><br/></div>
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-2">
		<% unless filename.blank? %>
			<img src="/photos/<%= filename %>.png" alt="<%= filename %>" height="350" width="400">
		<% end %>
		</div>
	</div>
	<div class="row"><br/></div>
</div>
  	<div id="learn-more-div">
  		<%= render "video/shared/add_customer" %>
 	</div>
